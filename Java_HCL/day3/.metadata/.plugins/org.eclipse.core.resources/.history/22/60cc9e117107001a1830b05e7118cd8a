package com.hcl.day4;

public class Payroll {
	Static int totalsalary;
    public void addSalary(int salary )
	totalsalary+=salary;
	}
	public static void main(String[] args) {
	Payroll empMonica=new Payroll()	;
	Payroll empAnusha=new Payroll();
	Payroll empNanditha=new Payroll();
	 
	empMonica.addSalary(45);
	empAnusha.addSalary(14);
	empNanditha.addSalary(30);
	System.out.println(Payroll.totalsalary);
	}
	
}
